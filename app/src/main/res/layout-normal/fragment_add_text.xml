<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_background"
    tools:context=".Fragment.AddTextFragment">

    <EditText
        android:id="@+id/edit_add_text"
        android:scrollbars="vertical"
        android:hint="Enter your text"
        android:background="@drawable/signupa_edittext_background"
        android:maxHeight="200dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_font"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"></androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_color_edit"
        android:layout_width="match_parent"
        android:layout_height="80dp"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_done"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>