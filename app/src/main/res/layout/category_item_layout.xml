<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:background="@android:color/transparent"
    android:id="@+id/category_item_cardview"
    tools:ignore="MissingDefaultResource"
    android:orientation="horizontal">

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/category_item_imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/category_banner"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a" />


    <TextView
        android:id="@+id/category_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/suprema_semibold"
        android:text="Hello dwd"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/category_item_imageView"
        app:layout_constraintEnd_toEndOf="@+id/category_item_imageView"
        app:layout_constraintStart_toStartOf="@+id/category_item_imageView"
        app:layout_constraintTop_toTopOf="@+id/category_item_imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>